
@model IEnumerable<BurgersPizzas.Models.ItemData>

<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <link href="~/Styles/main.css" rel="stylesheet" />
    <link href="~/Styles/Layout.css" rel="stylesheet" />
    <link href="~/Styles/Loader.css" rel="stylesheet" />
    <title></title>
</head>
<body>
         
            <div class="btn-container-margin-left">
                <button class="btun" onclick="location.href = '@Url.Action("Add","Home")'" style="background-color: forestgreen; cursor:pointer; padding: 10px 20px; margin-right: 10rem!important;width: 10rem">Add Item</button>
            </div>
           
    <div class="table-responsive">
        <table class="table table-bordered">
            <tr>
                <th class="text-center" style="background-color: #deecb8;">Id</th>
                <th class="text-center" style="background-color: #deecb8;">Name</th>
                <th class="text-center" style="background-color: #deecb8;">Description</th>
                <th class="text-center" style="background-color: #deecb8;">Link</th>

            </tr>
            @foreach (var item in Model)
            {
        <tr>
            <th class="text-center">@Html.DisplayFor(x => item.Id)</th>
            <th class="text-center">
            <a style="color:blue!important"href="@Url.Action("UpdaterForm","Home", new { Name = item.Name }, null)">@Html.DisplayFor(x => item.Name)</a></th>
            <th class="text-center">@Html.DisplayFor(x => item.Description)</th>
            <th class="text-center"><a style="color:blue!important"onclick="@item.Web" target="_blank">@item.Web</a></th>


        </tr>
            }
        </table>
    </div>
     <div class="loading"/>
    
</body>
</html>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        $('.loading').hide();
        $('.btun').click(function () {
            debugger;
            $('.loading').show();
        })

    })

</script>
